# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/splitwise

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-make-it-long-and-random
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@splitwise.com
APP_NAME=SplitWise

# Google Cloud Vision API (Optional for OCR)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_VISION_KEY_PATH=path/to/service-account-key.json

# OpenAI API (for NLP features)
OPENAI_API_KEY=your-openai-api-key

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# External APIs
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret

# Payment Processing (Optional)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# WhatsApp API (Optional)
WHATSAPP_API_URL=https://api.ultramsg.com
WHATSAPP_INSTANCE_ID=your-instance-id
WHATSAPP_TOKEN=your-token